<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logindeemefit.ui.recoveraccount.RecoverAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvRecuperarCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginRight="24dp"
            android:text="@string/RecuperarCuenta"
            android:fontFamily="@font/aesthetic"
            android:textSize="44sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvInstrucciones"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/SolicitudCorreo" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:padding="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmailRecuperar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="@string/Email"
                android:background="@color/white"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEnviarEmailRecuperacion"
            android:layout_width="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/botones_fondo"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:layout_gravity="center"
            android:text="@string/Enviar"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_height="48dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>